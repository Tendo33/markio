# Markio 核心配置参数

# MinerU PDF解析引擎
# vlm-sglang-engine: 基于SGLang引擎推理VLM
# pipeline: 传统视觉模型
PDF_PARSE_ENGINE="vlm-sglang-engine"

# MinerU最小批处理推理大小 - 批量处理时的最小样本数量
# 较大的值可以提高GPU利用率，但会增加内存使用
MINERU_MIN_BATCH_INFERENCE_SIZE=256

# MinerU设备模式 - 指定推理计算设备类型
# cuda: 使用NVIDIA GPU加速
# cpu: 使用CPU进行计算（较慢但兼容性更好）
MINERU_DEVICE_MODE="cuda"

# MinerU模型来源 - 指定模型加载方式
# local: 从本地文件系统加载模型
# huggingface
# modelscope
MINERU_MODEL_SOURCE="local"

# MinerU虚拟显存大小(仅解析引擎为pipeline时有用)
# 8192MB = 8GB，根据GPU实际显存大小调整
MINERU_VIRTUAL_VRAM_SIZE=8192 #8G

# VLM 显存占用百分比
VLM_MEM_FRACTION_STATIC=0.5

OUTPUT_DIR="outputs"
LOG_DIR="logs"
LOG_LEVEL="INFO"